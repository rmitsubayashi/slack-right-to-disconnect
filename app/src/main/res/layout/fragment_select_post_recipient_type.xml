<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/select_post_recipient_type_channel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_post_recipient_type_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        app:layout_constraintStart_toEndOf="@+id/select_post_recipient_type_channel_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_post_recipient_type_thread_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thread"
        app:layout_constraintStart_toEndOf="@+id/select_post_recipient_type_user_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_post_recipient_type_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_post_recipient_type_channel_button" />
</androidx.constraintlayout.widget.ConstraintLayout>