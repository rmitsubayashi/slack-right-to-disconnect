<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <NumberPicker
        android:id="@+id/set_late_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/set_late_time_hour_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <TextView
        android:id="@+id/set_late_time_hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/home_late_time_hour"
        app:layout_constraintBottom_toBottomOf="@+id/set_late_time_hour"
        app:layout_constraintEnd_toStartOf="@+id/set_late_time_minutes"
        app:layout_constraintStart_toEndOf="@+id/set_late_time_hour"
        app:layout_constraintTop_toTopOf="@+id/set_late_time_hour" />

    <NumberPicker
        android:id="@+id/set_late_time_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@id/set_late_time_minute_label"
        app:layout_constraintStart_toEndOf="@id/set_late_time_hour_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set_late_time_minute_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/home_late_time_minutes"
        app:layout_constraintBottom_toBottomOf="@+id/set_late_time_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/set_late_time_minutes"
        app:layout_constraintTop_toTopOf="@+id/set_late_time_hour" />
</androidx.constraintlayout.widget.ConstraintLayout>